{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="connected">
            Vous êtes connecté en tant que "{{ app.user.userIdentifier }}", <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
    <form method="post">
        

        

        <h1 class="">Veuillez vous identifier</h1>
        <div class="input">
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="" autocomplete="email" required autofocus>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
            >
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <button class="" type="submit">
            Sign in
            </button>
        </div>
        

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        
    </form>
    <section class="needAccount">
        <h2>Pas encore de compte ?</h2>
        <a href="{{ path('app_register')}}">Créer un compte</a>
    </section>
{% endblock %}
