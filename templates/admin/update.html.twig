{% extends 'base.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}

{{ form_start(form, {'attr': {'class': 'adminCreateForm'}}) }}
    <div class="">
        {{ form_label(form.title, "Titre de l'article") }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>
    <div class="">
        {{ form_label(form.img, "Url de l'image") }}
        {{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.img) }}
    </div>
    <div class="">
        {{ form_label(form.text, "Contenu de l'article") }}
        {{ form_widget(form.text, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
        {{ form_errors(form.text) }}
    </div>
    <div class="categories">
        {{ form_label(form.categories, "Catégorie de l'article") }}
        {{ form_widget(form.categories) }}
        {{ form_errors(form.categories) }}
    </div>
    <div class="">
        {{ form_label(form.save, "Catégorie de l'article") }}
        {{ form_widget(form.save, { 'label': 'Modifer l\'article' }) }}

    </div>
{{ form_end(form) }}

{% endblock %}